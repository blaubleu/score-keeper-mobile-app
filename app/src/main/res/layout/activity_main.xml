<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chulla"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="4dp"
                android:paddingTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chulla" />

            <TextView
                android:id="@+id/chullas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Chullas"
                android:textColor="#FB131313"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chullasScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:onClick="chullasScore"
                android:padding="8dp"
                android:paddingBottom="12dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="32sp" />

            <Button
                android:id="@+id/rondaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="twoToChullasRonda"
                android:text="ronda" />

            <Button
                android:id="@+id/limpiaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="twoToChullasLimpia"
                android:text="limpia" />

            <Button
                android:id="@+id/dosC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="pairNumberAfterTwentyCardsInStackChullas"
                android:text="+2 points" />

            <Button
                android:id="@+id/caidaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="onlyWayToFortyC"
                android:text="caida" />

            <Button
                android:id="@+id/dealC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:background="#FF4C3B"
                android:onClick="twoFromChullasBadDealing"
                android:text="-2 points" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0072bb"
            android:layout_marginTop="8dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viejo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="4dp"
                android:paddingTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/viejo" />

            <TextView
                android:id="@+id/viejos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viejo"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Viejos"
                android:textColor="#FB131313"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viejosScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:onClick="viejosScore"
                android:padding="8dp"
                android:paddingBottom="12dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="32sp" />

            <Button
                android:id="@+id/rondaV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="twoToViejosRonda"
                android:text="ronda" />

            <Button
                android:id="@+id/limpiaV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="twoToViejosLimpia"
                android:text="limpia" />

            <Button
                android:id="@+id/dosV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="pairNumberAfterTwentyCardsInStackViejos"
                android:text="+2 points" />

            <Button
                android:id="@+id/caidaV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:onClick="onlyWayToFortyV"
                android:text="caida" />

            <Button
                android:id="@+id/dealV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:background="#FF4C3B"
                android:onClick="twoFromViejosBadDealing"
                android:text="-2 points" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#C6C8CA"
        android:onClick="reset"
        android:text="reset" />

</RelativeLayout>
